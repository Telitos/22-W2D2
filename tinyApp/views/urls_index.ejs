<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body background="blue.jpg">
<center>
<header>
  <% include ./partials/_header %>
</header>
<h1>Welcome to your personal URL repo</h1>
  <% if (!userList[user]) { %>
    <h1> Log in to add your URLs!</h1>
    <% } else { %>
    <table style="width:100%, height:100%">
    <% for (shortURL in urls) { %>
    <% console.log("this are the shortURL:", shortURL) %>
    <% console.log("this is the user:", user) %>
    <% console.log("this the shortURL user id:", urls[shortURL].id) %>
    <% console.log("this is the urlDatabase:", urls) %>
      <% if (urls[shortURL].id === user) { %>
      <tr>
        <td><%= shortURL %></td>
        <td>---></td>
        <td><a href="<%=`http://localhost:8080/u/${shortURL}`%>"><%= urls[shortURL]["longURL"]%></a></td>
        <td>
          <form method="POST" action="<%=`/urls/${shortURL}/delete`%>">
            <input type="submit" value="Delete this URL">
          </form>
        </td>
        <td>
          <form method="GET" action="<%=`/urls/${shortURL}`%>">
          <input type="submit" value="Edit this URL">
          </form>
        </td>
        </tr>
        <% }; %>
      <% }; %>
    </table>
    <table style="width:50%">
        <th>
          <a href="/urls/new">Click here to shorten your URL!</a>
        </th>
    </table>
   <% }; %>
  </center>
</table>
</body>
</html>